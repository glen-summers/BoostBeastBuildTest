using msvc ;

# use pch, add multiple test apps

import os ;
local BOOST_LIBRARY_PATH = [ os.environ BOOST_LIBRARY_PATH ] ;
local SSL_LIBRARY_PATH = [ os.environ SSL_LIBRARY_PATH ] ;

project
    : requirements
		<threading>multi 
		<address-model>64
		<architecture>x86
		<link>static
		<runtime-link>static
		<include>$(SSL_LIBRARY_PATH)/include
		<library-path>$(SSL_LIBRARY_PATH)/lib
    ;

using boost : 1.67 : <include>$(BOOST_LIBRARY_PATH) <library>$(BOOST_LIBRARY_PATH)/stage/lib ;
import boost ;
boost.use-project 1.67 ;

lib libssl ;
lib libcrypto ;

exe App1
	: App1.cpp libssl libcrypto
	: <library>/boost//system
	;